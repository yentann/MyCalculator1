<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/darker_gray"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tvEx"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:textColor="@color/numberButton"
            android:maxLines="1"
            android:textSize="50dp"/>

    <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="313dp"
            android:textColor="@color/numberButton"
            android:maxLines="1"
            android:textSize="50sp"/>
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tvAC"
                    style="@style/NumberButtonStyle"
                    android:text="AC"
                    android:layout_width="207dp" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvslash"
                    style="@style/NumberButtonStyle"
                    android:text="/"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="@android:color/background_light"/>
        </LinearLayout>





        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tv7"
                    style="@style/NumberButtonStyle"
                    android:text="7" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv8"
                    style="@style/NumberButtonStyle"
                    android:text="8" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv9"
                    style="@style/NumberButtonStyle"
                    android:text="9" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvstar"
                    style="@style/NumberButtonStyle"
                    android:text="*"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="@android:color/background_light"/>


        </LinearLayout>




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tv4"
                    style="@style/NumberButtonStyle"
                    android:text="4" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv5"
                    style="@style/NumberButtonStyle"
                    android:text="5" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv6"
                    style="@style/NumberButtonStyle"
                    android:text="6" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvminus"
                    style="@style/NumberButtonStyle"
                    android:text="-"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="@android:color/background_light"/>


        </LinearLayout>




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tv1"
                    style="@style/NumberButtonStyle"
                    android:text="1" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv2"
                    style="@style/NumberButtonStyle"
                    android:text="2" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tv3"
                    style="@style/NumberButtonStyle"
                    android:text="3" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvplus"
                    style="@style/NumberButtonStyle"
                    android:text="+"
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="@android:color/background_light"/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tvzero"
                    style="@style/NumberButtonStyle"
                    android:layout_width="103dp"
                    android:text="0" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvzerodot"
                    style="@style/NumberButtonStyle"
                    android:text="." android:textStyle="bold"/>
            <TextView
                    android:id="@+id/tvequal"
                    style="@style/NumberButtonStyle"
                    android:text="="
                    android:background="@android:color/holo_orange_dark"
                    android:textColor="@android:color/background_light"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>